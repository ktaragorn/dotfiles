---
- alias: Any Entered house
  id: any_enter_house
  trigger:
    platform: state
    entity_id: group.all_people
    to: home
  action:
    - service: script.notify_mqtt
      data:
        target: home_enter
        message: Someone entered house. Downstairs AC is on.
    - service: notify.pushbullet
      data:
        title: Gondor Home Assistant
        message: Someone entered house. Downstairs AC is on.
    - service: switch.turn_on
      entity_id: switch.downstairs_ac

- alias: All left home
  id: all_leave_house
  trigger:
    platform: state
    entity_id: group.all_people
    to: not_home
  action:
    - service: script.notify_mqtt
      data:
        target: home_enter
        message: All have left the house, Both ACs have been switched off
    - service: notify.pushbullet
      data:
        title: Gondor Home Assistant
        message: All have left the house, Both ACs have been switched off
    - service: switch.turn_off
      entity_id: switch.downstairs_ac
    - service: switch.turn_off
      entity_id: switch.upstairs_ac
    - service: light.turn_off
      entity_id: light.bedroom_light

- alias: Downstairs Button Pressed
  id: button_pressed
  trigger:
    - platform: webhook
      webhook_id: button_pressed
  action:
    - service: light.toggle
      entity_id: light.bedroom_light

- alias: Downstairs Button double Pressed
  id: button_pressed
  trigger:
    - platform: webhook
      webhook_id: button_double_pressed
  action:
    - service: switch.toggle
      entity_id: switch.downstairs_ac

- alias: We are going to bed
  id: moved_upstairs
  trigger:
    - platform: state
      entity_id: binary_sensor.phone_charging
      to: "on"
    - platform: time
      at: "23:59:00"
    - platform: webhook
      webhook_id: button_long_pressed
  condition:
    - condition: state
      entity_id: group.all_people
      state: home
    # - condition: time
    #   after: '20:00:00'
    - condition: state
      entity_id: input_boolean.we_are_in_bed
      state: "off"
  action:
    - service: script.notify_mqtt
      data:
        target: in_bed
        message: We have come to bed, AC downstairs is off, AC upstairs is on
    - service: notify.pushbullet
      data:
        title: Gondor Home Assistant
        message: We have come to bed, AC downstairs is off, AC upstairs is on
    # - service: switch.turn_on
    #   entity_id: switch.upstairs_ac
    - service: climate.turn_on
      entity_id: climate.upstairs_ac
    - service: climate.set_temperature
      data:
        entity_id: climate.upstairs_ac
        temperature: 23
        hvac_mode: cool
    - service: climate.set_fan_mode
      data:
        entity_id: climate.upstairs_ac
        fan_mode: medium
    - service: light.turn_off
      entity_id: light.bedroom_light
    - service: switch.turn_on
      entity_id: switch.upstairs_tv
    - service: switch.turn_on
      entity_id: switch.upstairs_speaker
    - service: switch.turn_off
      entity_id: switch.downstairs_ac
    - service: input_boolean.turn_on
      data:
        entity_id: input_boolean.we_are_in_bed

- alias: Start Sleep timer
  id: start_sleep_timer
  trigger:
    - platform: webhook
      webhook_id: tv_sleep_timer
  condition:
    - condition: state
      entity_id: input_boolean.we_are_in_bed
      state: "on"
  action:
    - service: script.notify_mqtt
      data:
        target: sleep_timer
        message: We have come to bed, AC downstairs is off, AC upstairs is on
    - service: notify.pushbullet
      data:
        title: Gondor Home Assistant
        message: Sleep Timer - TV will be turned off in 20 min
    - service: timer.cancel
      entity_id: timer.tv_sleep_timer
    - service: switch.turn_off
      entity_id: switch.downstairs_ac
    - service: timer.start
      data:
        entity_id: timer.tv_sleep_timer
        duration: 00:20:00

# Home assistant cannot use the same trigger with multiple automations
- alias: Sleep timer triggered
  trigger:
    - platform: event
      event_type: timer.finished
      event_data:
        entity_id: timer.tv_sleep_timer
    - platform: webhook
      webhook_id: tv_sleep_timer_trigger
  condition:
    - condition: state
      entity_id: input_boolean.we_are_in_bed
      state: "on"
    - condition: state
      entity_id: timer.tv_sleep_timer
      state: active
  action:
    - service: script.notify_mqtt
      data:
        target: sleep_timer
        message: Sleep Timer - TV turned off
    - service: notify.pushbullet
      data:
        title: Gondor Home Assistant
        message: Sleep Timer - TV turned off
    - service: timer.cancel
      entity_id: timer.tv_sleep_timer
    - service: switch.turn_off
      entity_id: switch.upstairs_tv
    - service: switch.turn_off
      entity_id: switch.upstairs_speaker

