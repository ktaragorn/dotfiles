- alias: We are in bed, set fan mode
  id: upstairs_ac_fan
  trigger:
    - platform: time
      at: "6:00:00"
  condition:
    - condition: state
      entity_id: input_boolean.we_are_in_bed
      state: "on"
  action:
    - service: script.notify_mqtt
